{
    // File language associations
    "files.associations": {
        ".coveragerc": "ini",
        "pylintrc": "ini",
        "pyproject.toml": "ini",
        "workflow_config": "ini",
    },

    // Python linting: Pylint
    "pylint.ignorePatterns": [
        "**/site-packages/**/*.py",
        ".vscode/*.py",
        "docs/source/conf.py",
        "run_tests.py",
        "scratch/**",
        "scratch.py",
        "tests/**",
        "utilities/**",
    ],
    "pylint.severity": {
        "convention": "Warning",
        "error": "Warning",
        "fatal": "Warning",
        "refactor": "Warning",
        "warning": "Warning",
        "info": "Warning",
    },

    // Python linting: Flake8
    "flake8.ignorePatterns": [
        "**/site-packages/**/*.py",
        ".vscode/*.py",
        "docs/source/conf.py",
        "run_tests.py",
        "scratch/**",
        "scratch.py",
        "tests/**",
        "utilities/**",
    ],
    "flake8.severity": {
        "E": "Warning",
        "F": "Warning",
        "I": "Warning",
        "W": "Warning",
    },

    // Python linting: Mypy
    "mypy-type-checker.ignorePatterns": [
        "**/site-packages/**/*.py",
        ".vscode/*.py",
        "docs/source/conf.py",
        "run_tests.py",
        "scratch/**",
        "scratch.py",
        "tests/**",
        "utilities/**",
    ],
    "mypy-type-checker.severity": {
        "error": "Warning",
        "note": "Warning",
    },

    // Python tests
    "python.testing.pytestEnabled": false,
    "python.testing.unittestEnabled": true,
    "python.testing.unittestArgs": [
        "-v",
        "tests",
    ],
}
